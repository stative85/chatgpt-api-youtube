generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  displayName   String?
  avatarUrl     String?
  sessions      Session[]
  projects      Project[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Session {
  id          String   @id @default(cuid())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  title       String?
  transcript  Json?
  memories    Memory[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Memory {
  id          String   @id @default(cuid())
  session     Session  @relation(fields: [sessionId], references: [id])
  sessionId   String
  role        String
  content     String
  embedding   Float[]?
  metadata    Json?
  createdAt   DateTime @default(now())
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  owner       User?    @relation(fields: [ownerId], references: [id])
  ownerId     String?
  sessions    Session[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
